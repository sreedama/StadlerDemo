{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-command-panel.directive",
        "js/aw-panel-body.directive",
        "js/aw-default-cell.directive",
        "js/aw-list-filter.directive",
        "js/aw-panel-footer.directive",
        "js/aw-button.directive",
        "js/aw-i18n.directive",
        "js/aw-xrt.directive",
        "js/aw-back-button.directive",
        "js/aw-panel-header.directive",
        "js/aw-break.directive",
        "js/aw-widget.directive",
        "js/aw-form.directive"
    ],
    "onEvent": [ {
        "eventId": "gwt.SubLocationContentSelectionChangeEvent",
        "action": "closePanel"
    },
    {
        "eventId": "performSearch.selectionChangeEvent",
        "action": "handleSelectedParameterTypeSelection"
    },
    {
        "eventId": "awPanel.reveal",
        "action": "reveal"
    } ],
    "data":{
        "filterBox": {
            "displayName": "Filter Parameters",
            "type": "STRING",
            "dbValue":""
        },
        "selectedType": {
            "type": "STRING",
            "dbValue": ""
        },
        "mat1RefParamName":
        {
            "displayName": "{{i18n.mat1RefParamName}}",
            "type": "STRING",
            "isEditable": "true",
            "isEnabled": "false"

        },
        "mat1RefDataType":
        {
            "displayName": "{{i18n.mat1RefDataType}}",
            "type": "STRING",
            "isRequired": "false",
            "isEditable": "true",
            "isEnabled": "false"

        },
        "mat1RefParamValue":
        {
            "displayName": "{{i18n.mat1RefParamValue}}",
            "type": "DOUBLE",
            "isRequired": "true",
            "isEditable": "true"
        },
        "mat1RefParamStringValue":
        {
            "displayName": "{{i18n.mat1RefParamValue}}",
            "type": "STRING",
            "isRequired": "true",
            "isEditable": "true"
        },
        "mat1RefParamValueMax":
        {
            "displayName": "{{i18n.mat1RefParamValueMax}}",
            "type": "DOUBLE",
            "isRequired": "true",
            "isEditable": "true"
        },
        "mat1RefParamUnit":
        {
            "displayName": "{{i18n.mat1RefParamUnit}}",
            "type": "STRING",
            "isRequired": "false",
            "isEditable": "true"
        } 
    },    
    "dataProviders": {
        "performSearch": {
            "action": "search",
            "response": "{{data.metaParameterObjectsFound.searchResults}}",
            "totalFound": "{{data.metaParameterObjectsFound.totalResults}}"
        }
    },
    "actions": {
        "reveal": {
            "actionType": "dataProvider",
            "method": "performSearch"
        },
        "handleSelectedParameterTypeSelection": {
            "actionType": "JSFunction",
            "method": "setSelectedTypeSelectionJs",
            "inputData": {
                "data": "{{data}}"
            },
            "deps": "js/Mtw0ShowAddParameterService"
        },
        "search": {
            "actionType": "TcSoaService",
            "serviceName": "Core-2006-03-DataManagement",
            "method": "getProperties",
            "deps": "js/Mtw0ShowAddParameterService",
            "inputData": 
            {
                "objects": [
                    "{{function:getSelectedObject}}"
                ],
                "attributes": 
                [
                    "mat1MatCatalogRevisions"
                ]
            },
            "policy":
            {
                "types":
                [
                    {
                        "name": "Mat1MatCatalogRevision",
                        "properties":
                        [
                            {
                                "name": "mat1MetaParameters",
                                "modifiers":
                                [
                                    {
                                        "name": "withProperties",
                                        "Value": "true"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "name": "Mat1MetaSingleParameter",
                        "properties":
                        [
                            {
                                "name": "mat1UnitAliasName"
                            },
                            {
                                "name": "mat1DataType"
                            },
                            {
                                "name": "mat1Category"                                
                            }
                        ]
                    },
                    {
                        "name": "Mat1MetaSmartTable",
                        "properties":
                        [
                            {
                                "name": "mat1UnitXAliasName"
                            },
                            {
                                "name": "mat1UnitYAliasName"
                            },
                            {
                                "name": "mat1Category"                                
                            }
                        ]
                    }                                        
                ]
            },
            "outputData": 
            {
                "metaParameterObjectsFound" : "{{function:getReferenceMetaParametersArray}}"
            }
        },        
        "createParameter": {
            "actionType": "JSFunction",
            "method": "createAndAddReferenceParameter",
            "inputData": {
                "data": "{{data}}",
                "ctx":"{{ctx}}"
            },
            "deps": "js/Mtw0ShowAddParameterService"
        },
        "createParameter1" : {
            "actionType": "TcSoaService",
            "deps": "js/Mtw0ShowAddParameterService",        
            "serviceName": "IMM-2018-12-AWCMaterialMgmtService",
            "method": "createParam4MMetaParam4MaterialRev",
            "inputData": 
            {
                "materialRev":
                {
                    "type":"{{ctx.selected.type}}",
                    "uid":"{{ctx.selected.uid}}"
                },
                "metaParams" : "{{function:getSelectedMetaParametersArray}}"
            },
            "events": 
            {
                "success": [
                    {
                        "name": "cdm.relatedModified",
                        "eventData": 
                        {
                            "relatedModified": 
                            [
                                "{{ctx.selected}}"
                            ],

                            "refreshLocationFlag": true
                        }
                    },                    {
                        "name": "complete",
                        "eventData": 
                        {
                            "source": "toolAndInfoPanel"
                        }
                    }
                ]
            }            
        },
        "closePanel": 
        {
            "actionType": "Event",
            "method": "Event",
            "inputData": 
            {
                "events": 
                [
                    {
                        "name": "complete",
                        "eventData": 
                        {
                            "source": "toolAndInfoPanel"
                        }
                    }
                ]
            }
        } ,
        "clearSelectedType": {
            "actionType": "JSFunction",
            "method": "clearSelectedType",
            "inputData": {
                "data": "{{data}}"
            },
            "deps": "js/Mtw0ShowAddParameterService"
        }       
    },    
     "functions": {
        "getSelectedMetaParametersArray": {
            "functionName": "getSelectedMetaParametersArray",
            "parameters": [
                "{{data}}"
            ]
        },
        "getSelectedObject":{
            "functionName": "getSelectedObject",
            "parameters": [
                "{{ctx.pselected}}",
                "{{data}}"
            ]
        }
    },
    "conditions": {
        "isRefParamSelected": {
            "expression": "data.selectedType.dbValue =='' "
        },

        "canCreateParameter" :{
            "expression": "((data.dataProviders.performSearch.selectedObjects && data.dataProviders.performSearch.selectedObjects.length > 0))"
        },
        "isFormValid" :{
            "expression": "(data.mat1RefParamValue.dbValue && data.mat1RefParamValueMax.dbValue)"
        },
        "isFormStringValid" :{
            "expression": "(data.mat1RefParamStringValue.dbValue)"
        }
         

    },
    "i18n": 
    {
        "AddRefParameter": ["MaterialMgmtMessages"],
        "selectParameter": ["MaterialMgmtMessages"],
        "PropType": ["MaterialMgmtMessages"],        
        "SmartTableType": ["MaterialMgmtMessages"],        
        "Unit": ["MaterialMgmtMessages"],
        "Category":["MaterialMgmtMessages"],
        "mat1RefParamUnit":["MaterialMgmtMessages"],
        "mat1RefParamValueMax":["MaterialMgmtMessages"],
        "mat1RefParamValue":["MaterialMgmtMessages"],
        "mat1RefDataType":["MaterialMgmtMessages"],
        "mat1RefParamName":["MaterialMgmtMessages"]
    }
}
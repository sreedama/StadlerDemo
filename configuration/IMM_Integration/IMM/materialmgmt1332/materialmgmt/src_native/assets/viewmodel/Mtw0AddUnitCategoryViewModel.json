{
    "schemaVersion": "1.0.0",
    "imports": [
        "js/aw-panel-section.directive",
        "js/aw-command-panel.directive",
        "js/aw-panel-footer.directive",
        "js/aw-button.directive",
        "js/aw-i18n.directive",
        "js/visible-when.directive",
        "js/aw-xrt.directive",
        "js/aw-form.directive",
        "js/aw-panel-body.directive"
    ],
    "actions": {
        "createUnitCategory": {
            "actionType": "TcSoaService",
            "serviceName": "Internal-Core-2012-10-DataManagement",
            "method": "createRelateAndSubmitObjects",
            "inputData": {
                "inputs": "{{function:constructCreateInputforUnitCategory}}"
            },
            "events": {
                "success": [
                    {
                        "name": "cdm.relatedModified",
                        "eventData": {
                            "relatedModified": [
                                "{{ctx.selected}}"
                            ],
                            "refreshLocationFlag": true
                        }
                    },
                    {
                        "name": "treeGrid.plTable.reload"
                    },
                    {
                        "name": "complete",
                        "eventData": {
                            "source": "toolAndInfoPanel"
                        }
                    }
                ]
            },
            "actionMessages": {
                "success": [
                    {
                        "message": "unitCategoryCreateSuccessMessage"
                    }
                ],
                "failure": [
                    {
                        "condition": "errorCode.code===515106 ",
                        "message": "createOrUpdateFailedMessage"
                    }
                ]
            },
            "deps": "js/Mtw0ShowUnitsTreeDataService"
        }
    },
    "messages": {
        "createOrUpdateFailedMessage": {
            "messageType": "ERROR",
            "messageText": "{{i18n.failedToCreateUnitCategory}}",
            "messageTextParams": [
                "{{ctx.selected.props.object_name.uiValues[0]}}"
            ]
        }
    },
    "functions": {
        "constructCreateInputforUnitCategory": {
            "functionName": "constructCreateInputforUnitCategory",
            "parameters": [
                "{{data}}"
            ]
        }
    },
    "i18n": {
        "Mtw0AddUnitCategory": [
            "MaterialMgmtMessages"
        ],
        "Create": [
            "MaterialMgmtMessages"
        ],
        "failedToCreateUnitCategory": [
            "MaterialMgmtMessages"
        ],
        "unitCategoryCreateSuccessMessage": [
            "MaterialMgmtMessages"
        ]
    }
}